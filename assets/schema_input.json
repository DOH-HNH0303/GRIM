{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/grim/master/assets/schema_input.json",
    "title": "nf-core/grim pipeline - params.input schema",
    "description": "Schema for the file provided with params.input. Supports two formats: 1) Individual file paths, or 2) Phoenix output directory",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "gamma_ar_file": {
                "type": "string",
                "errorMessage": "GAMMA AR file path"
            },
            "amrfinder_report": {
                "type": "string",
                "errorMessage": "AMRFinder report file path"
            },
            "phoenix_assembly_fasta": {
                "type": "string",
                "errorMessage": "Phoenix assembly FASTA file path"
            },
            "phoenix_outdir": {
                "type": "string",
                "errorMessage": "Phoenix output directory path"
            },
            "ont_complete_genome": {
                "type": "string",
                "errorMessage": "ONT complete genome FASTA file path"
            }
        },
        "required": ["sample"],
        "additionalProperties": false
    }
}